@model office.Models.Units
@using PagedList;
@using PagedList.Mvc;
@using GridMvc.Html
@{
    ViewBag.Title = "";
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "", @id = "frmCandidate" }))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    
                    <div class="ibox-tools">
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-md-2">
                                    <label>  Name</label>
                                </div>
                                <div class="col-md-3">
                                    @Html.HiddenFor(a => a.UnitID, new { @id = "UnitID" })
                                    @Html.TextBoxFor(a => a.Unit, new { @class = "form-control", title = "Unit Name", @id = "Unit" })
                                    <p id="Namevalidation" style="color:red;display:none">Please Enter Name</p>
                                </div>
                                <div class="col-md-3" style="margin-left: 0!important">
                                    @Html.CheckBoxFor(a => a.IsActive, new { @class = "", value = "true", title = "Active", @id = "IsActive" })
                                    <label for="checkbox5">
                                        Active
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row" style="padding-top: 10px;">
                        <div class="col-md-2">
                        </div>
                        <div class="col-md-8">

                            <button class="btn btn-white" id="btnClear" type="button">Clear</button>
                            <button class="btn btn-primary" id="btnsave" type="button">Save changes</button>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/jquery-2.1.1.js"></script>
}
<script>

    $(document).ready(function () {
        $("#Namevalidation").hide();
        $('#btnClear').on('click', function () {
            $('#UnitID').val(0);
            $('#UnitName').val('');
        });
        $('#btnsave').on('click', function () {
            $("#Namevalidation").hide();

            if ($("#UnitName").val() == "") {
                $("#Namevalidation").show();
                return false;
            }
            else {

                $.ajax({
                    type: 'POST',
                    dataType: 'json',
                    url: '/Master/SaveUnit',
                    data:
                    {
                        UnitID: $("#UnitID").val() ,
                        UnitName: $("#Unit").val(),
                        IsActive: $('input[name=IsActive]').prop('checked')
                    },
                    success: function (da) {
                        $('#UnitID').val(0);
                        $('#Unit').val('');
                                 $.ajax({
                                    url: "@Url.Action("LoadUnitGrid", "Master")",
                                    contentType: "application/json",

                                    dataType: "text",
                                    type: "Get",
                                    async: true,
                                    success: function (data) {
                                        $('#mgrid').html(data);

                                    },
                                    error: function (data) {
                                    },
                                    complete: function () {
                                    }
                                });
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                    }
                });
            }
        });
    });
</script>
