@model IEnumerable<office.Models.PersonMobileList>

@{
    Layout = null;
}
<script src="~/js/jquery-2.1.1.js"></script>


<table class="table" id="mobilelist">
    <thead></thead>
    <tbody>
        @foreach (var item in Model)
        {

        <tr><td class="multimobile">@item.Mobile</td><td><i class="fa fa-times deleteMobile pull-right" id="@item.PMobileDetailId" aria-hidden="true"></i></td></tr>

        }
    </tbody>
</table>

<script>
    $(document).on('click', 'i.deleteMobile', function (e) {
        e.preventDefault();
        $(this).parents('tr').remove();
        var id = $(this).attr("id");

        $.ajax({
            type: 'POST',
            dataType: 'json',
            url: '/Master/DeleteContactPersonMobile',
            data:
            {
                Id: id,
            },
            success: function (da) {
                alert(da);
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
            }
        });
    });
</script>
