@model IEnumerable<office.Models.PersonEmailList>

@{
    Layout = null;
}
<script src="~/js/jquery-2.1.1.js"></script>


<table class="table" id="emaillist">
    <thead></thead>
    <tbody>
        @foreach (var item in Model)
        {

          <tr><td class="multiemail">@item.Email</td><td><i class="fa fa-times deleteemail pull-right" id="@item.PEmailDetailId" aria-hidden="true"></i></td></tr>

        }
    </tbody>
</table>

<script>
    $(document).on('click', 'i.deleteemail', function (e) {
        e.preventDefault();
        $(this).parents('tr').remove();
        var id = $(this).attr("id");

        $.ajax({
            type: 'POST',
            dataType: 'json',
            url: '/Master/DeleteContactPersonEmail',
            data:
            {
                Id: id,
            },
            success: function (da) {
                alert(da);
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
            }
        });
    });
</script>

